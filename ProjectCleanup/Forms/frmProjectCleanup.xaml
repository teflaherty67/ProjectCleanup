<Window x:Class="ProjectCleanup.frmProjectCleanup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectCleanup"
             mc:Ignorable="d" 
             d:DesignWidth="340" d:DesignHeight="400"  Title="Project Cleanup" MinWidth="320" MinHeight="380">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Label Content="Client Name:"/>
        <ComboBox x:Name="cmbClient" Grid.Column="1" Height="25"/>
        <Label Content="Number of floors:" Grid.Row="1"/>
        <ComboBox x:Name="cmbFloors" Grid.Row="1" Grid.Column="1" Height="25"/>
        <Label Grid.Row="2" Content="Select sheet groups to delete:"/>
        
        
        <StackPanel Grid.Row="3" Grid.Column="1">
            <Button x:Name="btnAll" Width="90" Grid.Row="3" Grid.Column="1" Height="25" Content="Chcek All" HorizontalAlignment="Right" Click="btnAll_Click"/>
            <Button x:Name="btnNone" Grid.Row="3" Grid.Column="1" Content="Check None" Width="90" Height="25" HorizontalAlignment="Right" Click="btnNone_Click" Margin="0,10,0,0"/>
        </StackPanel>        
        <CheckBox x:Name="chbViews" Grid.Row="4" VerticalAlignment="Center" Content="Delete unused views" Margin="5,0,0,0"/>        
        <CheckBox x:Name="chbSchedules" Grid.Row="5" VerticalAlignment="Center" Margin="5,0,0,0" Content="Delete unused schedules"/>        
        <CheckBox x:Name="chbSchedRename" Grid.Row="6" VerticalAlignment="Center" Margin="5,0,0,0" Content="Rename Schedules"/>
        <CheckBox x:Name="chbCode" Grid.Row="7" VerticalAlignment="Center" Content="Clean plan code" Margin="5,0,0,0"/>
        <CheckBox x:Name="chbGroups" Grid.Row="8" VerticalAlignment="Center" Margin="5,0,0,0" Content="Clean sheet names" />
        <StackPanel Grid.Row="10" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnOK" Width="90" Height="25" Margin="0,0,5,0" Content="OK" Click="btnOK_Click"/>
            <Button x:Name="btnCancel" Width="90" Margin="5,0,0,0" Content="Cancel" Height="25" Click="btnCancel_Click"/>
        </StackPanel>        
    </Grid>
</Window>
