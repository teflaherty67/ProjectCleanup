<Window x:Class="ProjectCleanup.frmProjectCleanup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectCleanup"
             mc:Ignorable="d" 
             d:DesignHeight="280" d:DesignWidth="250" Title="Project Cleanup">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>            
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Label Content="Client Name:"/>
        <ComboBox x:Name="cmbClient" Grid.Column="1" Height="25"/>
        <Label Content="# of Floors:" Grid.Row="1"/>
        <ComboBox x:Name="cmbFloors" Grid.Row="1" Grid.Column="1" Height="25"/>
        <Label Content="Project Code:" Grid.Row="2"/>
        <CheckBox x:Name="chbCode" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>
        <Label Content="Elevation Groups:" Grid.Row="3"/>
        <ListBox ItemsSource="{Binding Items}" Grid.Row="4" Grid.ColumnSpan="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" Margin="0,0,5,0"/>
                        <CheckBox IsChecked="{Binding IsSelected}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnOK" Width="90" Height="25" Margin="0,0,5,0" Content="OK"/>
            <Button x:Name="btnCancel" Width="90" Margin="5,0,0,0" Content="Cancel" Height="25"/>
        </StackPanel>        
    </Grid>
</Window>
